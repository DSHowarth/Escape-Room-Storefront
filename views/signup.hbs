<div class="d-flex justify-content-center align-items-center">
    <div class="card text-center col-5 col-md-8">
        
        <div class="card-header">
            <h5 class="card-title">Sign Up</h5>
        </div>

        <div class="card-body">
            <form id="login-form" class="text-start">

                <div class="mb-3">
                    <label for="email" class="form-label">Email address</label>
                    <input type="email" class="form-control" id="email" placeholder="name@example.com">
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control" id="password">
                </div>

                <div class="text-center mb-3 d-grid gap-3">
                    <button type="submit" class="btn btn-primary">Sign Up</button>
                </div>

            </form>

            <p class="text-start card-text"><a class="link-offset-2 link-underline link-underline-opacity-0"
                    href="/login">Already a member? Log In!</a></p>
        </div>
    </div>
</div>