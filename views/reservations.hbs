<body class="container">
    <h1> Reservations are made on a first come, first serve basis. Please select a time and date below to reserve now:</h1>
    <div>
        {{!-- Create a div for each day, and create a button for every available time slot that day --}}
        {{#each days as |day|}}
        <div>
           <h5>{{day.date}}</h5>
           {{#each day.avail_times as time}}
            <button type="button" class="btn btn-dark" data-bs-toggle="modal" data-bs-target="#myModal">{{time}}</button>
           {{/each}}
        </div>
        {{/each}}
    </div>
    {{!-- Modal changes depending on whether user is logged in. If not, prompts them to do so instead of saving reservation --}}
    {{#if loggedIn}}
    <div class="modal fade" id="myModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
        <div class="modal-header">
            <h1 class="modal-title fs-5" id="exampleModalLabel">Confirmation</h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            Book an Appointment for May 2nd, 2024 at 10:00 am?
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="button" class="btn btn-primary">Confirm</button>
        </div>
        </div>
    </div>
    </div>
    {{/if}}
    {{#unless loggedIn}}
    <div class="modal fade" id="myModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
        <div class="modal-header">
            <h1 class="modal-title fs-5" id="exampleModalLabel">Unable to Reserve Time</h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            You must be logged in to reserve a time. 
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="button" class="btn btn-primary">Login</button>
            <button type="button" class="btn btn-primary">Sign Up</button>
        </div>
        </div>
    </div>
    </div>
    {{/unless}}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" 
    integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
    <script src="./reservation.js"></script>
</body>